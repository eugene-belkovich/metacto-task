          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Dark Mode Support\",\n    \"description\": \"Add dark mode theme option for the application. This would help reduce eye strain during night-time usage and save battery on OLED screens.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/features",
              "host": ["{{baseUrl}}"],
              "path": ["api", "features"]
            },
            "description": "Create a new feature request. Feature ID is auto-saved to collection variables."
          }
        },
        {
          "name": "List Features",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/features?page=1&limit=10&sort=votes&status=pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "features"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (default: 10, max: 50)"
                },
                {
                  "key": "sort",
                  "value": "votes",
                  "description": "Sort by: votes, newest, oldest"
                },
                {
                  "key": "status",
                  "value": "pending",
                  "description": "Filter by status: pending, in_progress, completed, rejected",
                  "disabled": true
                }
              ]
            },
            "description": "List all features with optional filtering and pagination"
          }
        },
        {
          "name": "List Features (No Auth)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/features",
              "host": ["{{baseUrl}}"],
              "path": ["api", "features"]
            },
            "description": "List all features - no authentication required"
