    {
      "name": "Features",
      "item": [
        {
          "name": "Create Feature",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('featureId', response.id);",
